#!/usr/bin/env bash
# Miscellaneous activities for specific machines
# Random aliases
alias portfolio="cd $HOME/developer/portfolio-website/"
alias ls="ls -G"

# Label for bash prompt
export MACHINE_NAME=Macbook
export OP_SYS=mac

# Added by Caenbrew.
prepend_path "$HOME/.local/bin"
export CLICOLOR=1
export LSCOLORS=gxfxhxDxbxhxhxhxhxcxcx

# Bash-Git-Prompt location
if [ -f "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh" ]; then
  __GIT_PROMPT_DIR=$(brew --prefix)/opt/bash-git-prompt/share
  source "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh"
fi
