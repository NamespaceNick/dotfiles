#!/usr/bin/env bash
# Quick git add, commit, and pushing

set +x
git add -A
if [ "$1" == "-f" ]; then
  shift
  echo "$@"
  git commit -m "$@"
  git push
else
  git commit -m \""$@"\"
  echo "Would you like to push? [y/N]"
  read response
  if [ "$response" == "Y" -o "$response" == "y" ]; then
    git push
  fi
fi



